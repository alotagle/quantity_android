<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/coloPrimary">

    <ImageView
        android:layout_width="358dp"
        android:layout_height="230dp"
        android:id="@+id/splashscreen"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:visibility="visible"
        android:elevation="10dp"
        android:transitionName="imageViewLogo"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quantity"
        android:textColor="@color/gray"
        android:gravity="center_horizontal"
        android:id="@+id/textViewNameLogin"
        android:alpha="1"
        android:transitionName="textViewName"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/loginContainer"

        android:layout_gravity="center_horizontal"
        android:background="@color/coloPrimary"

        >
        <EditText
            android:layout_width="399dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUsername"
            android:hint="@string/textView_username"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.48"
            android:autoText="false"
            android:text="paraLlevar" />

        <EditText
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="@string/textView_password"
            android:id="@+id/editTextPass"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.48"
            android:text="Z0Gw8G8Mki" />

        <Button
            android:layout_width="437dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/buttonLogin"
            android:background="@drawable/custom_btn_login"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

</LinearLayout>