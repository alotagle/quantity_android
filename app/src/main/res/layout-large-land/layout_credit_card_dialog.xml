<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/imageView"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="47dp"
        android:src="@drawable/credit_cards"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextCardNumber"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:hint="@string/dialog_card_number"
        android:textColor="@color/background_material_dark"
        android:layout_above="@+id/editTextMonth"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCVV"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/editTextCardNumber"
        android:layout_alignStart="@+id/editTextCardNumber"
        android:layout_alignRight="@+id/editTextCardNumber"
        android:layout_alignEnd="@+id/editTextCardNumber"
        android:hint="@string/dialog_card_code"
        android:textColor="@color/background_material_dark"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextMonth"
        android:layout_above="@+id/editTextCVV"
        android:layout_alignLeft="@+id/editTextCardNumber"
        android:layout_alignStart="@+id/editTextCardNumber"
        android:hint="MM"
        android:textColor="@color/background_material_dark"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextYear"
        android:hint="YY"
        android:textColor="@color/background_material_dark"
        android:layout_below="@+id/editTextCardNumber"
        android:layout_toRightOf="@+id/editTextMonth"
        android:layout_alignRight="@+id/editTextCVV"
        android:layout_alignEnd="@+id/editTextCVV" />


</RelativeLayout>
